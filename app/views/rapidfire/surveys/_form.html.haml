%h3= survey.new_record? ? "New Survey" : "Edit Survey"
= form_for survey do |f|
  - if survey.errors.any?
    %ul
      - survey.errors.full_messages.each do |message|
        %li= message
  .form-group
    = f.label :name
    = f.text_field :name
  .form-group
    = f.label :introduction
    = f.text_area :introduction
  = f.label :after_survey_content
  = f.text_area :after_survey_content
  = f.submit
